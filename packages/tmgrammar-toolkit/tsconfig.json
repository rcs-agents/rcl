{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "outDir": "../../.moon/cache/types/packages/tmgrammar-toolkit",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "#src/*": [
        "./src/*/index.ts",
        "./src/*.ts"
      ],
      "#src": [
        "./src/index.ts"
      ],
      "#tests/*": [
        "./tests/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}