{
  "name": "tmgrammar-toolkit",
  "version": "0.1.0",
  "description": "A unified facade for authoring, testing, and validating TextMate grammars",
  "repository": "https://github.com/rcs-agents/rcl",
  "author": "Saulo Vallory",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "bun test --define import.meta.TEST=true",
    "test:watch": "bun test --define import.meta.TEST=true --watch",
    "test:regex": "bun test ./src/helpers/regex.test.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf lib"
  },
  "keywords": [
    "textmate",
    "grammar",
    "syntax-highlighting",
    "vscode",
    "typescript"
  ],
  "bin": {
    "tmt": "./bin/tmt"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "imports": {
    "#src": "./src/index.ts",
    "#src/*": [
      "./src/*/index.ts",
      "./src/*.ts"
    ],
    "#tests/*": "./tests/*.ts"
  },
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json",
    "./*": "./lib/*.js"
  },
  "dependencies": {
    "onigasm": "^2.2.2",
    "vscode-tmgrammar-test": "^0.1.3",
    "js-yaml": "^4.1.0",
    "commander": "^11.0.0",
    "tsx": "^4.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/plist": "^3.0.5",
    "expect-type": "^1.2.1",
    "tmlanguage-generator": "^0.6.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "vscode-textmate": "^9.0.0"
  },
  "files": [
    "README.md",
    "lib",
    "lib/**/*",
    "src/**/*"
  ]
}
