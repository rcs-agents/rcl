{
  "name": "tmgrammar-toolkit",
  "version": "0.1.0",
  "description": "A unified facade for authoring, testing, and validating TextMate grammars",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#src": "./src/index.ts",
    "#src/*": [
      "./src/*/index.ts",
      "./src/*.ts"
    ],
    "#tests/*": "./tests/*.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./terminals": {
      "import": "./dist/terminals/index.js",
      "types": "./dist/terminals/index.d.ts"
    },
    "./terminals/*": {
      "import": "./dist/terminals/*.js",
      "types": "./dist/terminals/*.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation/index.js",
      "types": "./dist/validation/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:prod": "bun build --define import.meta.TEST=false src/index.ts --outdir dist",
    "dev": "tsc --watch",
    "test": "bun test --define import.meta.TEST=true",
    "test:watch": "bun test --define import.meta.TEST=true --watch",
    "test:regex": "bun test ./src/helpers/regex.test.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "cli": "node ./dist/cli.js"
  },
  "keywords": [
    "textmate",
    "grammar",
    "syntax-highlighting",
    "vscode",
    "typescript"
  ],
  "author": "svallory",
  "license": "MIT",
  "dependencies": {
    "vscode-textmate": "^9.0.0",
    "vscode-oniguruma": "^2.0.1",
    "vscode-tmgrammar-test": "^0.1.3",
    "js-yaml": "^4.1.0",
    "commander": "^11.0.0",
    "tsx": "^4.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "tmlanguage-generator": "^0.6.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "bin": {
    "tmt": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
