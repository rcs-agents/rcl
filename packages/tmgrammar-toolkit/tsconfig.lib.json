{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "**/tests/**/*"
  ]
}
