// this file is required for VSCode to work properly
{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "#src": ["./src/index.ts"],
      "#src/*": [
        "./src/*/index.ts",
        "./src/*.ts",
        "./src/*.js"
      ],
      "#tests/*": [
        "./tests/*.ts",
        "./tests/*.js"
      ]
    },
  },
  "include": [
    "src/**/*",
    "syntaxes/**/*",
    "tests/**/*"
  ],
  "references": [
    {
      "path": "../tmgrammar-toolkit"
    }
  ]
}
