// this file is required for VSCode to work properly
{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "#src": [
        "./src/index.ts",
        "./src/index.js"
      ],
      "#src/*": [
        "./src/*/index.ts",
        "./src/*.ts",
        "./src/*.js",
        "./src/*"
      ],
      "#tests/*": [
        "./tests/*.ts",
        "./tests/*.js",
        "./tests/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "syntaxes/**/*",
    "tests/**/*"
  ],
  "references": [
    {
      "path": "../tmgrammar-toolkit"
    }
  ]
}
